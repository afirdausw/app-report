<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/dark</item>
        <item name="itemBackground">@drawable/bottom_navigation_background</item>
        <item name="itemIconTint">@drawable/bottom_navigation</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigation.TextAppearance</item>
    </style>

    <style name="BottomNavigation.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>

</resources>